<% if current_user %>
  <div class="form-group profile-image">
    <%= image_tag(current_user.avatar_url) %>
  </div>
  <div class="form-group">
    <h3><%= current_user.username %></h3>
  </div>
<% end %>
<div class="form-group">
  <%= label_tag :uid, 'Title', class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= text_field :uid, :readonly => true, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= label_tag :uid, 'Description', class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= text_field :uid, :readonly => true, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <p></p>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= button_tag "Send Report", class: "btn btn-primary" %>
  </div>
</div>

